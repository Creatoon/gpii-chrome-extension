{
    "manifest_version": 2,
    "name": "GPII chrome extension",
    "version": "0.1.0",
    "permissions": [
        "management",
        "notifications",
        "tabs",
        "http://*/",
        "https://*/"
    ],
    "content_scripts": [{
        "matches": [
            "http://*/",
            "https://*/",
            "<all_urls>"
        ],
        "css": [
            "css/enactors.css"
        ],
        "js": [
            "dist/gpii-chrome-extension-contentScriptsLib.min.js",
            "content_scripts/simplification.js",
            "content_scripts/domEnactor.js",
            "content_scripts/domSettingsHandler.js"
        ],
        "all_frames": true
    }, {
        "matches": [
            "https://www.caljobs.ca.gov/*"
        ],
        "css": [
            "css/calJobs.css"
        ],
        "all_frames": true
    }],
    "background": {
        "scripts": [
            "dist/gpii-chrome-extension-all.min.js",
            "src/background.js"
        ]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "images/gpii.png",
        "templates/TableOfContents.html"
    ]
}
