// UI Enhancer "Enlarge text" input/button options
button.gpii-simplify-navToggle {
    background: #138bd6;
    background-image: -webkit-linear-gradient(top, #138bd6, #196b9e);
    background-image: -moz-linear-gradient(top, #138bd6, #196b9e);
    background-image: -ms-linear-gradient(top, #138bd6, #196b9e);
    background-image: -o-linear-gradient(top, #138bd6, #196b9e);
    background-image: linear-gradient(to bottom, #138bd6, #196b9e);
    -webkit-border-radius: 0.5rem;
    -moz-border-radius: 0.5rem;
    border-radius: 0.5rem;
    -webkit-box-shadow: 0px 1px 3px #666666;
    -moz-box-shadow: 0px 1px 3px #666666;
    box-shadow: 0px 1px 3px #666666;
    font-family: Arial;
    color: #ffffff;
    font-size: 1.2rem;
    padding: 5px 10px;
    text-decoration: none;
    border-image: none;
    border-width: 0;

    &:hover,
    &:focus {
        outline: 1px solid black;
    }

    &:active,
    &[aria-pressed="true"] {
        background-image: none;
        background-color: #135f8e;
        box-shadow: inset 0 0 10px #000000;
    }
}
