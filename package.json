{
    "name": "ui-options-chrome",
    "version": "0.1.0",
    "description": "User Interface Options Plus (UIO+) allows you to customize websites to match your own personal needs and preferences.",
    "license": "(BSD-3-Clause OR ECL-2.0)",
    "repository": {
        "type": "git",
        "url": "git://github.com/GPII/gpii-chrome-extension.git"
    },
    "keywords": [
        "accessibility",
        "google-chrome",
        "browser extension",
        "personalization",
        "infusion",
        "fluid",
        "preferences",
        "uio",
        "ui options",
        "user interface options",
        "gpii"
    ],
    "author": "Fluid Project",
    "bugs": {
        "url": "http://issues.gpii.net/browse/GPII"
    },
    "homepage": "https://github.com/GPII/gpii-chrome-extension#README.md",
    "scripts": {
        "pretest": "npm run pretest:cleanup && npm run pretest:instrumentSource",
        "pretest:cleanup": "node node_modules/rimraf/bin.js coverage/* instrumented/* reports/*",
        "pretest:instrumentSource": "node node_modules/nyc/bin/nyc.js instrument ./extension",
        "test": "npm run test:browser && npm run test:node",
        "test:browser": "node node_modules/testem/testem.js ci --file tests/browser/testem.js",
        "test:node": "node node_modules/nyc/bin/nyc.js node tests/node/all-tests.js",
        "test:vagrant": "vagrant up && vagrant ssh -c 'cd /home/vagrant/sync/; DISPLAY=:0 npm test'",
        "test:vagrantBrowser": "vagrant up && vagrant ssh -c 'cd /home/vagrant/sync/; DISPLAY=:0 npm run test:browser'",
        "test:vagrantNode": "vagrant up && vagrant ssh -c 'cd /home/vagrant/sync/; DISPLAY=:0 npm run test:node'",
        "posttest": "npm run posttest:coverageReport && npm run posttest:cleanup",
        "posttest:coverageReport": "node node_modules/nyc/bin/nyc.js report -r lcov -r text-summary",
        "posttest:cleanup": "node node_modules/rimraf/bin.js coverage/* instrumented/*"
    },
    "dependencies": {
        "infusion": "3.0.0-dev.20180801T212157Z.09bf3d438",
        "ws": "6.0.0"
    },
    "devDependencies": {
        "eslint-config-fluid": "1.3.0",
        "gpii-grunt-lint-all": "1.0.2",
        "grunt": "1.0.3",
        "grunt-contrib-clean": "1.1.0",
        "grunt-contrib-copy": "1.0.0",
        "grunt-contrib-uglify": "3.4.0",
        "grunt-contrib-stylus": "1.2.0",
        "grunt-crx": "1.0.5",
        "grunt-shell": "2.1.0",
        "node-jqunit": "1.1.8",
        "sinon-chrome": "2.3.2",
        "sinon": "6.1.4",
        "gpii-testem": "2.1.1-dev.20180320T102716Z.5caff1c",
        "ncp": "2.0.0",
        "nyc": "11.4.1",
        "rimraf": "2.6.2",
        "testem": "1.18.4"
    }
}
